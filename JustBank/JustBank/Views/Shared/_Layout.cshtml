<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title JustBank </title>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/Content/Admin.css"/>
        <link rel="stylesheet" href="~/Content/Site.css"/> 
        @Styles.Render("~/Content/css")      
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("JustBank", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Register", "CreateNew", "Clients")</li>
                        <li>@Html.ActionLink("Converter", "CurrencyConverter", "Home")</li>
                        <li>@Html.ActionLink("Log in", "Login", "Account") </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
        
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
               @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - JustBank</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
